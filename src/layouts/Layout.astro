---
import "../styles/global.css";
import { ModeToggle } from "@/components/ModeToggle";
import { ThemeSelector } from "@/components/ThemeSelector";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      const store = typeof localStorage !== "undefined" ? localStorage : null;

      /* Get saved preferences from localStorage */
      let savedTheme = store ? store.getItem("theme") : null;
      let savedMode = store ? store.getItem("mode") : null;

      /* If not in localStorage, use defaults */
      if (!savedTheme) {
        savedTheme = "default";
        if (store) store.setItem("theme", savedTheme);
      }
      if (!savedMode) {
        savedMode = "system";
        if (store) store.setItem("mode", savedMode);
      }

      /* Determine actual mode (resolve 'system' to 'light' or 'dark') */
      const getActualMode = (mode) => {
        if (mode === "system") {
          return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        }
        return mode;
      };

      const actualMode = getActualMode(savedMode);

      /* Set attributes on root element before first paint (prevents FOUC) */
      document.documentElement.setAttribute("data-theme", savedTheme);
      document.documentElement.setAttribute("data-mode", actualMode);
      document.documentElement.style.colorScheme = actualMode === "dark" ? "dark" : "light";

      /* Listen to system preference changes (only if mode is 'system') */
      const darkModeQuery = window.matchMedia("(prefers-color-scheme: dark)");
      darkModeQuery.addEventListener("change", (e) => {
        if (store && store.getItem("mode") === "system") {
          const newMode = e.matches ? "dark" : "light";
          document.documentElement.setAttribute("data-mode", newMode);
          document.documentElement.style.colorScheme = newMode === "dark" ? "dark" : "light";
        }
      });
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <ModeToggle client:load />
    <ThemeSelector client:load />
    <a href="/" class="text-link">Home</a>
    <a href="/generate" class="text-link">Generate</a>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
