---
import "../styles/global.css";
import { ModeToggle } from "@/components/ModeToggle";
import { ThemeSelector } from "@/components/ThemeSelector";
import { Toaster } from "@/components/ui/sonner";
import { LogoutButton } from "@/components/auth/LogoutButton";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;

// Weryfikacja stanu użytkownika z middleware
const user = Astro.locals.user;
const isAuthenticated = !!user;
---

<!doctype html>
<html lang="pl">
  <head>
    <script is:inline>
      const store = typeof localStorage !== "undefined" ? localStorage : null;

      /* Get saved preferences from localStorage */
      let savedTheme = store ? store.getItem("theme") : null;
      let savedMode = store ? store.getItem("mode") : null;

      /* If not in localStorage, use defaults */
      if (!savedTheme) {
        savedTheme = "default";
        if (store) store.setItem("theme", savedTheme);
      }
      if (!savedMode) {
        savedMode = "system";
        if (store) store.setItem("mode", savedMode);
      }

      /* Determine actual mode (resolve 'system' to 'light' or 'dark') */
      const getActualMode = (mode) => {
        if (mode === "system") {
          return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        }
        return mode;
      };

      const actualMode = getActualMode(savedMode);

      /* Set attributes on root element before first paint (prevents FOUC) */
      document.documentElement.setAttribute("data-theme", savedTheme);
      document.documentElement.setAttribute("data-mode", actualMode);
      document.documentElement.style.colorScheme = actualMode === "dark" ? "dark" : "light";

      /* Listen to system preference changes (only if mode is 'system') */
      const darkModeQuery = window.matchMedia("(prefers-color-scheme: dark)");
      darkModeQuery.addEventListener("change", (e) => {
        if (store && store.getItem("mode") === "system") {
          const newMode = e.matches ? "dark" : "light";
          document.documentElement.setAttribute("data-mode", newMode);
          document.documentElement.style.colorScheme = newMode === "dark" ? "dark" : "light";
        }
      });
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <ModeToggle client:load />
    <ThemeSelector client:load />
    <Toaster position="top-center" client:load />
    <nav role="navigation" aria-label="Główna nawigacja" class="nav-container">
      <div class="nav-links">
        <a href="/" class="text-link">Home</a>
        {
          isAuthenticated ? (
            <>
              <a href="/generate" class="text-link">
                Generate
              </a>
              {user?.email && (
                <span class="user-email" aria-label={`Zalogowany jako ${user.email}`}>
                  {user.email}
                </span>
              )}
              <LogoutButton client:only="react" />
            </>
          ) : (
            <>
              <a href="/auth/login" class="text-link">
                Zaloguj
              </a>
              <a href="/auth/register" class="text-link">
                Rejestracja
              </a>
            </>
          )
        }
      </div>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .nav-container {
    padding: 1rem 2rem;
    border-bottom: 1px solid hsl(var(--border));
    background-color: hsl(var(--background));
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .nav-links .text-link {
    text-decoration: none;
    color: hsl(var(--foreground));
    transition: color 0.2s;
  }

  .nav-links .text-link:hover {
    color: hsl(var(--primary));
  }

  .nav-links .text-link:focus-visible {
    outline: 2px solid hsl(var(--ring));
    outline-offset: 2px;
    border-radius: 4px;
  }

  .user-email {
    color: hsl(var(--muted-foreground));
    font-size: 0.875rem;
    margin-left: auto;
  }

  @media (max-width: 640px) {
    .nav-container {
      padding: 0.75rem 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .user-email {
      display: none;
    }
  }
</style>
