---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";
import { isFeatureEnabled } from "@/features";

export const prerender = false;

if (!isFeatureEnabled("auth")) {
  return Astro.redirect("/");
}

const verified = Astro.url.searchParams.get("verified") === "1";
---

<Layout title="Logowanie - 10xCards">
  <div class="container mx-auto px-4 py-16 max-w-md">
    {
      verified && (
        <div class="mb-4 rounded-md border border-green-200 bg-green-50 text-green-800 px-3 py-2 text-sm">
          Adres e‑mail został potwierdzony. Możesz się zalogować.
        </div>
      )
    }
    <LoginForm client:only="react" />
  </div>
</Layout>
